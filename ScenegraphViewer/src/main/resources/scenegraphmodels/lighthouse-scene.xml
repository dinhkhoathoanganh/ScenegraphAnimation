    <group name="grass_plane">
        <transform>
            <set>
                <translate>0 -.5 40</translate>
                <scale>100 1 100</scale>
            </set>

            <object instanceof="box" texture="grass">
                <material>
                    <ambient>0.6 0.6 0.0</ambient>
                    <specular>0.5 0.5 0.5</specular>
                    <diffuse>0.5 0.5 0.5</diffuse>
                    <shininess>0.1</shininess>
                </material>
            </object>
        </transform>
    </group>

    <group name="water_plane">
        <transform>
            <set>
                <translate>0 -.5 -35</translate>
                <scale>100 1 50</scale>
            </set>

            <object instanceof="box" texture="water">
                <material>
                    <ambient>0.0 0.2 0.8</ambient>
                    <specular>0.5 0.5 0.5</specular>
                    <diffuse>0.5 0.5 0.5</diffuse>
                    <shininess>5</shininess>
                </material>
            </object>
        </transform>
    </group>

    <group name="moon">
        <transform>
            <set>
                <translate>0 50 -100</translate>
            </set>
            <light>
                <ambient>0.8 0.8 0.8</ambient>
                <diffuse>0.1 0.1 0.1</diffuse>
                <specular>0 0 0</specular>
                <position>0 -20 20</position>
                <spotangle>45</spotangle>
                <spotdirection>0 -1 1</spotdirection>
            </light>

            <light>
                <ambient>0.7 0.7 0.7</ambient>
                <diffuse>0.1 0.1 0.1</diffuse>
                <specular>0.1 0.1 0.1</specular>
                <position>0 -40 30</position>
                <spotangle>90</spotangle>
                <spotdirection>0 1 -1</spotdirection>
            </light>

            <group>
                <transform>
                    <set>
                        <scale>20 20 20</scale>
                    </set>
                    <object instanceof="sphere">
                        <material>
                            <ambient>0.9 0.9 0.9</ambient>
                            <specular>0.5 0.5 0.5</specular>
                            <diffuse>0.5 0.5 0.5</diffuse>
                            <shininess>0.1</shininess>
                        </material>
                    </object>
                </transform>
            </group>
        </transform>
    </group>

    <transform>
        <set>
            <translate>0 0 -3</translate>
            <scale>2 2 2</scale>
        </set>
        <group name="lighthouse" from="scenegraphmodels/lighthouse.xml"/>
    </transform>

    <transform>
